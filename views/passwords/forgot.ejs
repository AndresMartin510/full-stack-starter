<%- contentFor('title') %>Forgot your password?
<%- contentFor('body') %>
<main class="container">
  <div class="row justify-content-center">
    <div class="col col-sm-10 col-md-8 col-lg-6 col-xl-4">
      <% if (flash.info || flash.error) { %>
        <% if (flash.info) { %>
        <div class="alert alert-primary">
          <%= flash.info.join(' '); %>
        </div>
        <% } %>
        <% if (flash.error) { %>
        <div class="alert alert-danger">
          <%= flash.error.join(' '); %>
        </div>
        <% } %>
      <% } %>
      <div class="card">
        <div class="card-body">
          <h2 class="card-title">Forgot your password?</h2>
          <p>Enter the email address you registered to receive a reset password link.</p>
          <form method="post" action="/passwords/forgot">
            <div class="mb-3">
              <label class="form-label" for="email">Email</label>
              <input type="text" class="form-control" id="email" name="email" />
            </div>
            <div class="mb-3 d-grid">
              <button class="btn btn-primary" type="submit">Submit</button>
            </div>
            <div class="mb-3 text-center">
              <a href="/login">Back to login...</a>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</main>
