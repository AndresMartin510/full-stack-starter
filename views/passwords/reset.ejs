<%- contentFor('title') %>Reset your password
<%- contentFor('body') %>
<main class="container">
  <div class="row justify-content-center">
    <div class="col col-sm-10 col-md-8 col-lg-6 col-xl-4">
      <% if (flash.info || flash.error) { %>
        <% if (flash.info) { %>
        <div class="alert alert-primary">
          <%= flash.info.join(' '); %>
        </div>
        <% } %>
        <% if (flash.error) { %>
        <div class="alert alert-danger">
          <%= flash.error.join(' '); %>
        </div>
        <% } %>
      <% } %>
      <div class="card">
        <div class="card-body">
          <h2 class="card-title">Reset your password</h1>
          <% if (isExpired) { %>
            <p>Sorry, this password reset link has expired.</p>
            <p><a href="/passwords/forgot">Request another?</a></p>
          <% } else { %>
            <p>Enter a new password for your account.</p>
            <form method="post" action="/passwords/reset/<%= token %>">
              <div class="mb-3">
                <label class="form-label" for="password">New password</label>
                <input type="password" class="form-control <%= hasError('password') ? 'is-invalid' : '' %>" id="password" name="password" />
                <%- renderErrorMessages('password') %>
              </div>
              <div class="mb-3 d-grid">
                <button class="btn btn-primary" type="submit">Submit</button>
              </div>
            </form>
          <% } %>
        </div>
      </div>
    </div>
  </div>
</main>
